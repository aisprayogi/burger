<div class="row">
    <div class="col-xs-12">
        <h1>Eat Da Burger!</h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-6">
        <h2>Burgers ready to eat!</h2>

        <ul>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <h3>{{this.burger_name}}</h3>

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" class="btn">EAT IT!</button>
                    </form>
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-xs-12 col-sm-6">
        <h2>Burgers already eaten!</h2>

        <ul>
            {{#each burgers}}
                {{#if this.devoured}}
                    <h3>{{this.burger_name}}</h3>

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button type="submit" class="btn">MAKE ANOTHER!</button>
                    </form>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">

            <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="name">
            </div>

            <button type="submit" class="btn">Add Burger</button>
        </form>
    </div>
</div>
